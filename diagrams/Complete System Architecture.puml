@startuml Payroll Class

class Payroll {
    - payrollId: String
    - employeeId: String
    - payPeriod: String
    - baseSalary: Double
    - overtimePay: Double
    - bonuses: Double
    - deductions: Double
    - netPay: Double
    - payDate: Date
    - status: PayrollStatus
    + calculateGrossPay(): Double
    + calculateDeductions(): Double
    + calculateNetPay(): Double
    + generatePayrollReport(): String
    + processPayment(): void
    + getPayrollSummary(): String
}

enum PayrollStatus {
    PENDING
    PROCESSED
    PAID
    FAILED
}

Payroll ||--|| PayrollStatus : uses

@enduml